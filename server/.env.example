# Server Configuration
NODE_ENV=production
PORT=5000

# MongoDB Configuration
# Para desenvolvimento local: mongodb://localhost:27017/savemymoney
# Para MongoDB Atlas: mongodb+srv://usuario:senha@cluster.xxxxx.mongodb.net/savemymoney?retryWrites=true&w=majority
MONGO_URI=mongodb://localhost:27017/savemymoney

# JWT Secret (use uma senha forte em produção!)
# Gere uma em: https://randomkeygen.com/
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# Frontend URL (para CORS)
# Desenvolvimento: http://localhost:5173
# Produção Render: https://savemymoney-frontend.onrender.com
CLIENT_URL=http://localhost:5173
FRONTEND_URL=http://localhost:5173

# ML API URL (opcional)
ML_API_URL=http://localhost:5001

# Redis Configuration (opcional - para cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Sentry Configuration (opcional - para monitoramento de erros)
SENTRY_DSN=

# Email Configuration (opcional - para envio de emails)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASSWORD=

# API Keys Externas (opcional)
YAHOO_FINANCE_KEY=
BRAPI_API_KEY=
